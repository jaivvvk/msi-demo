<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">

  <Package Name="MyApp"
           Manufacturer="Your Company"
           Version="1.0.0"
           UpgradeCode="12345678-1234-1234-1234-123456789abc">

    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="MyApp" />
    </StandardDirectory>

    <Feature Id="MainFeature" Title="MyApp Feature" Level="1">
      <ComponentGroupRef Id="MainComponents" />
    </Feature>

  </Package>

  <Fragment>
    <!-- Component inside DirectoryRef -->
    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="ReadmeComponent" Guid="12345678-1234-1234-1234-123456789ABC">
        <File Source="README.md" />
      </Component>
    </DirectoryRef>

    <!-- ComponentGroup at root level -->
    <ComponentGroup Id="MainComponents">
      <ComponentRef Id="ReadmeComponent" />
    </ComponentGroup>
  </Fragment>

</Wix>
